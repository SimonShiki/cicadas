{
  "productName": "cicadas",
  "version": "0.0.0",
  "identifier": "com.simonshiki.cicadas",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Cicadas",
        "width": 800,
        "height": 600,
        "minWidth": 770,
        "minHeight": 540,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "additionalBrowserArgs": "--enable-features=OverlayScrollbar,msOverlayScrollbarWinStyle,msOverlayScrollbarWinStyleAnimation",
        "windowEffects": {
          "effects": [
            "mica"
          ]
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "icons/32x32.png": "icons/"
    }
  }
}
